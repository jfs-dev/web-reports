@model List<WebReports.Models.ClientesViewModel>

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clientes - WebReports</title>

    <style>
        table,
        td {
            border: 1px solid black;
            border-collapse: collapse;
            height: 25px;
        }
    </style>
</head>

<body>
    <table style="width:100%;">
        <tr>
            <td style="text-align:center;vertical-align:middle;">
                <img src="https://picsum.photos/80/80" alt="Logo" style="padding-top:3px;">
            </td>
            <td style="width:85%;text-align:center;vertical-align:middle;font-size:18px;"><strong>CLIENTES</strong></td>
        </tr>
    </table>

    </br>

    <table style="width:100%;">
        <tr style="text-align:center;vertical-align:middle;font-size:14px">
            <td><strong>Código</strong></td>
            <td style="width:60%;padding-left:10px;text-align:left;vertical-align:middle;"><strong>Nome</strong></td>
            <td><strong>Data de Nascimento</strong></td>
        </tr>

        @{
            foreach (var item in @Model)
            {
                <tr style="text-align:center;vertical-align:middle;font-size:12px;">
                    <td>@item.Id</td>
                    <td style="padding-left:10px;text-align:left;vertical-align:middle;">@item.Nome</td>
                    <td>@item.DataNascimento</td>
                </tr>
            }
        }
    </table>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        window.print();
    });
</script>

</html>